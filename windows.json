{
    "builders": [
      {
        "communicator": "winrm",
        "cpus": "{{ user `cpus` }}",
        "disk_adapter_type": "lsisas1068",
        "disk_size": "{{ user `disk_size` }}",
        "floppy_files": [
          "{{ user `autounattend` }}",
          "floppy/00-run-all-scripts.ps1",
          "floppy/disable-windows-update.ps1",
          "floppy/install-winrm.ps1",
          "floppy/power-settings.ps1",
          "floppy/zz-start-transports.ps1"
        ],
